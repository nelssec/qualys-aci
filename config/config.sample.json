{
  "qualys": {
    "api_url": "https://qualysapi.qualys.com",
    "api_version": "v1.3",
    "scanner_type": "cloud",
    "scanner_appliance_id": "",
    "scan_options": {
      "include_vulnerabilities": true,
      "include_compliance": true,
      "include_sensitive_data": false,
      "include_malware": true,
      "severity_threshold": "MEDIUM"
    }
  },
  "azure": {
    "subscription_id": "your-subscription-id",
    "tenant_id": "your-tenant-id",
    "resource_groups": ["*"],
    "event_filters": {
      "aci": true,
      "aca": true,
      "include_system_containers": false
    }
  },
  "scanning": {
    "auto_scan": true,
    "scan_private_registries": true,
    "scan_cache_hours": 24,
    "retry_attempts": 3,
    "retry_delay_seconds": 30,
    "timeout_seconds": 1800,
    "parallel_scans": 5,
    "notify_on_high_severity": true,
    "block_vulnerable_deployments": false
  },
  "notification": {
    "enabled": true,
    "email": "security@example.com",
    "severity_threshold": "HIGH",
    "channels": {
      "email": true,
      "teams": false,
      "slack": false,
      "pagerduty": false
    }
  },
  "compliance": {
    "frameworks": [
      "CIS",
      "PCI-DSS",
      "HIPAA",
      "GDPR"
    ],
    "enforce_policies": false,
    "required_checks": []
  },
  "reporting": {
    "retention_days": 90,
    "export_format": "json",
    "include_historical_data": true,
    "generate_summary": true
  }
}
